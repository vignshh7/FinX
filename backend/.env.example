# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database
# Local: sqlite:///finance.db
# Production: postgresql://user:pass@host/database
DATABASE_URL=sqlite:///finance.db

# OCR.space API (Required for OCR)
OCRSPACE_API_KEY=your-ocrspace-api-key-here

# File Upload
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=16777216  # 16MB

# CORS - Comma-separated origins (* for all, or specific URLs)
# Local: *
# Production: https://yourapp.com,https://www.yourapp.com
CORS_ORIGINS=*

# Port (optional, default 5000)
PORT=5000
